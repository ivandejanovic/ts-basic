	"devDependencies": {
		"@types/express": "^4.17.13",
		"@types/errorhandler": "^1.5.0",
		"@types/method-override": "^0.0.32",
		"@types/morgan": "^1.9.3",
		"@types/node": "^17.0.17",
		"ts-node-dev": "^1.1.8",
		"tslint": "^6.1.3",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^4.5.5"
	},
	"version": "1.0.0",
	"engines": {
