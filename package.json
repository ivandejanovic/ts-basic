		"@types/errorhandler": "^0.0.32",
		"@types/method-override": "^0.0.31",
		"@types/morgan": "^1.7.37",
		"@types/node": "^12.7.2",
		"ts-node-dev": "^1.0.0-pre.41",
		"tslint": "^5.18.0",
		"tslint-config-airbnb": "^5.11.1",
		"tslint-config-prettier": "^1.18.0",
